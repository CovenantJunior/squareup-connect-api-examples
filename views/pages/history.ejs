<html>

<head>
  <link href="/stylesheets/style.css" rel="stylesheet" type="text/css">
</head>

<body>
  <header>
    <%- include("../partials/header") %>
  </header>
  <div class="wrapper">
    <div id="card-details__wrapper">
      <div id="card-details__title-wrapper">
        <div id="card-details__title">
          <h4>Transaction history</h4>
          <div>Card number <%= giftCard.gan %></div>
        </div>
      </div>
      <div class="dashboard-cards__card">
        <div class="dashboard-cards__inner">
          <div class="dashboard-cards__card-front">
            <img src="/images/giftCardImage.png" />
          </div>
        </div>
      </div>
      <div>
        <ul class="transaction-history-list">
          <% giftCardActivities.forEach(function(activity) { %>
            <li>
              <div class="transaction-history-detail__money">
                <div><%= getActivityType(activity) %></div>
                <div><%= getActivityMoney(activity) %></div>
              </div>
              <div class="transaction-history-detail__date">
                <%= formatDate(activity.createdAt) %>
              </div>
            </li>
          <% }); %>
        </ul>
      </div>
    </div>

  </div>